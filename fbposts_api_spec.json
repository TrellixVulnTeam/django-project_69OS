{
  "swagger": "2.0",
  "host": "localhost:8000",
  "basePath": "/api/",
  "info": {
    "version": "1.0.0",
    "title": "fbposts API",
    "description": "Describing api for each function"
  },
  "schemes": [
    "https",
    "http"
  ],
  "securityDefinitions": {
    "oauth": {
      "tokenUrl": "http://auth.ibtspl.com/oauth2/",
      "flow": "password",
      "scopes": {
        "read": "read posts",
        "write": "create posts",
        "update": "update posts",
        "delete": "delete posts",
        "superuser": "super user permission"
      },
      "type": "oauth2"
    }
  },
  "definitions": {
    "ReactedUser": {
      "allOf": [
        {
          "$ref": "#/definitions/User"
        },
        {
          "type": "object",
          "properties": {
            "reaction": {
              "type": "string",
              "enum": [
                "LIKE",
                "LOVE",
                "HAHA",
                "WOW",
                "SAD",
                "ANGRY"
              ]
            }
          }
        }
      ]
    },
    "ReactionAndCount": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "LIKE",
            "LOVE",
            "HAHA",
            "WOW",
            "SAD",
            "ANGRY"
          ]
        },
        "count": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "Reply": {
      "type": "object",
      "properties": {
        "comment_id": {
          "type": "integer",
          "format": "int64"
        },
        "commenter": {
          "$ref": "#/definitions/User"
        },
        "commented_at": {
          "type": "string",
          "format": "date-time"
        },
        "comment_content": {
          "type": "string"
        }
      },
      "required": [
        "comment_id",
        "commenter",
        "commented_at",
        "comment_content"
      ]
    },
    "PostContent": {
      "type": "object",
      "properties": {
        "post_content": {
          "type": "string"
        }
      },
      "required": [
        "post_content"
      ]
    },
    "User": {
      "type": "object",
      "properties": {
        "user_id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "profile_pic_url": {
          "type": "string"
        }
      },
      "required": [
        "user_id",
        "name",
        "profile_pic_url"
      ]
    },
    "ReactionDetails": {
      "type": "object",
      "properties": {
        "type": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "LIKE",
              "LOVE",
              "HAHA",
              "WOW",
              "SAD",
              "ANGRY"
            ]
          }
        },
        "count": {
          "type": "integer",
          "format": "int64"
        }
      },
      "required": [
        "type",
        "count"
      ]
    },
    "Comment": {
      "allOf": [
        {
          "$ref": "#/definitions/Reply"
        },
        {
          "type": "object",
          "properties": {
            "reactions": {
              "type": "object",
              "$ref": "#/definitions/ReactionDetails"
            }
          }
        }
      ],
      "required": [
        "reactions"
      ]
    },
    "CommentWithReplies": {
      "allOf": [
        {
          "$ref": "#/definitions/Comment"
        },
        {
          "type": "object",
          "properties": {
            "replies_count": {
              "type": "integer",
              "format": "int64"
            },
            "replies": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Comment"
              }
            }
          }
        }
      ],
      "required": [
        "replies_count",
        "replies"
      ]
    },
    "Post": {
      "allOf": [
        {
          "$ref": "#/definitions/PostContent"
        },
        {
          "type": "object",
          "properties": {
            "post_id": {
              "type": "integer",
              "format": "int64"
            },
            "posted_by": {
              "type": "object",
              "$ref": "#/definitions/User"
            },
            "posted_at": {
              "type": "string",
              "format": "date-time"
            },
            "reactions": {
              "type": "object",
              "$ref": "#/definitions/ReactionDetails"
            },
            "comments": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/CommentWithReplies"
              }
            },
            "comment_count": {
              "type": "integer",
              "format": "int64"
            }
          }
        }
      ],
      "required": [
        "posted_by",
        "posted_at",
        "reactions",
        "comments",
        "comment_count"
      ]
    }
  },
  "parameters": {
    "CreatePostParameter": {
      "name": "new post",
      "in": "body",
      "description": "user id and post content for creating post",
      "schema": {
        "$ref": "#/definitions/PostContent"
      },
      "required": true
    },
    "PostIdPathParameter": {
      "name": "postid",
      "in": "path",
      "description": "post id",
      "type": "integer",
      "format": "int64",
      "required": true
    },
    "CommentIdPathParameter": {
      "name": "commentid",
      "in": "path",
      "description": "comment id",
      "type": "integer",
      "format": "int64",
      "required": true
    },
    "CommentContentParameter": {
      "name": "comment_content",
      "in": "body",
      "description": "add comment to post",
      "schema": {
        "properties": {
          "comment_content": {
            "type": "string"
          }
        },
        "required": [
          "comment_content"
        ]
      },
      "required": true
    }
  },
  "responses": {
    "CreatePostResponse": {
      "description": "successfully created",
      "schema": {
        "type": "object",
        "properties": {
          "post_id": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": [
          "post_id"
        ]
      }
    },
    "GetPostResponse": {
      "description": "successfully retrieved post",
      "schema": {
        "$ref": "#/definitions/Post"
      }
    },
    "ListOfPostsResponse": {
      "description": "get posts of the user of whose userid mentioned in url",
      "schema": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/Post"
        }
      }
    },
    "ListOfRepliesResponse": {
      "description": "replies for a comment",
      "schema": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/Reply"
        }
      }
    },
    "AddCommentResponse": {
      "description": "created comment successfully",
      "schema": {
        "properties": {
          "comment_id": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": [
          "comment_id"
        ]
      }
    },
    "GetReactionsResponse": {
      "description": "successfully retrieved reactions",
      "schema": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/ReactedUser"
        }
      }
    },
    "GetReactionMetricsResponse": {
      "description": "successfully retrieved reaction metrics",
      "schema": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/ReactionAndCount"
        }
      }
    }
  },
  "paths": {
    "/post/v1/": {
      "post": {
        "operationId": "create_post",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/CreatePostParameter"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/CreatePostResponse"
          }
        }
      }
    },
    "/posts/{postid}/v1": {
      "get": {
        "operationId": "get_post",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/PostIdPathParameter"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/GetPostResponse"
          }
        }
      },
      "delete": {
        "operationId": "delete_post",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/PostIdPathParameter"
          }
        ],
        "responses": {
          "200": {
            "description": "post deleted successfully"
          }
        }
      }
    },
    "/posts/v1": {
      "get": {
        "operationId": "get_user_posts",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "responses": {
          "200": {
            "description": "successfully deleted"
          }
        }
      }
    },
    "/posts/most_positively_reacted/v1": {
      "get": {
        "operationId": "get_more_positively_reacted_posts",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/ListOfPostsResponse"
          }
        }
      }
    },
    "/posts/reacted/v1": {
      "get": {
        "operationId": "get_posts_reacted_by_user",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/ListOfPostsResponse"
          }
        }
      }
    },
    "/posts/{postid}/comments/v1": {

      "post": {
        "operationId": "add_comment",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/PostIdPathParameter"
          },
          {
            "$ref": "#/parameters/CommentContentParameter"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/AddCommentResponse"
          }
        }
      }
    },
    "/comments/{commentid}/replies/v1": {
      "post": {
        "operationId": "add_reply_to_comment",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/CommentIdPathParameter"
          },
          {
            "$ref": "#/parameters/CommentContentParameter"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/AddCommentResponse"
          }
        }
      },
      "get": {
        "operationId": "get_replies_of_a_comment",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/CommentIdPathParameter"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/ListOfRepliesResponse"
          }
        }
      }
    },
    "/posts/{postid}/reactions/v1": {
      "post": {
        "operationId": "react_to_post",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/PostIdPathParameter"
          }
        ],
        "responses": {
          "200": {
            "description": "successfully reacted to post"
          }
        }
      },
      "get": {
        "operationId": "get_reaction_to_post",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/PostIdPathParameter"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/GetReactionsResponse"
          }
        }
      }
    },
    "/comments/{comment}/reactions/v1": {
      "post": {
        "operationId": "react_to_comment",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/CommentIdPathParameter"
          }
        ],
        "responses": {
          "200": {
            "description": "successfully reacted to comment"
          }
        }
      }
    },
    "/posts/{postid}/reaction_metrics/v1": {
      "get": {
        "operationId": "get_reaction_metrics_of_a_post",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/PostIdPathParameter"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/GetReactionMetricsResponse"
          }
        }
      }
    }
  }
}

