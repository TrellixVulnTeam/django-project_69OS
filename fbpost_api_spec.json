{
  "swagger": "2.0",
  "host": "localhost:8000",
  "basePath": "/api/",
  "info": {
    "version": "1.0.0",
    "title": "fbposts API",
    "description": "Describing api for each function"
  },
  "schemes": [
    "https",
    "http"
  ],
  "securityDefinitions": {
    "oauth": {
      "tokenUrl": "http://auth.ibtspl.com/oauth2/",
      "flow": "password",
      "scopes": {
        "read": "read posts",
        "write": "create posts",
        "update": "update posts",
        "delete": "delete posts",
        "superuser": "super user permission"
      },
      "type": "oauth2"
    }
  },
  "definitions": {
    "CreatePost": {
      "type": "object",
      "properties": {

        "post_content": {
          "type": "string"
        }
      },
      "required": [
        "post_content"
      ]
    }
  },
  "parameters": {
    "CreatePostParameter": {
      "name": "newpost",
      "in": "body",
      "description": "user id and post content for creating post",
      "schema": {
        "$ref": "#/definitions/CreatePost"
      },
      "required": true
    }
  },
  "responses": {
    "CreatePostResponse": {
      "description": "successfully created",
      "schema": {
        "type": "object",
        "properties": {
          "post_id": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": [
          "post_id"
        ]
      }
    }
  },
  "paths": {
    "/post/create/": {
      "post": {
        "operationId": "create_post",
        "security": [
          {
            "oauth": [
              "superuser"
            ]
          }
        ],
        "parameters": [
          {
            "$ref": "#/parameters/CreatePostParameter"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/CreatePostResponse"
          }
        }
      }
    }
  }
}