{
    "swagger": "2.0",
    "host": "localhost:8000",
    "basePath": "/api/",
    "info": {
        "version": "1.0.0",
        "title": "Sample API",
        "description": "Try outs"
    },
    "schemes": [
        "https",
        "http"
    ],
    "securityDefinitions": {
        "oauth": {
            "tokenUrl": "http://auth.ibtspl.com/oauth2/",
            "flow": "password",
            "scopes": {
                "read": "read users",
                "write": "create users",
                "update": "update users",
                "delete": "delete users",
                "superuser": "super user permission"
            },
            "type": "oauth2"
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "age": {
                    "type": "integer",
                    "format": "int64"
                }
            },
            "required": [
                "firstName",
                "lastName",
                "username",
                "age"
            ]
        }

    },

    "paths": {
      "/persons/": {
            "get": {
              "operationId": "get_persons",
              "summary": "get all persons",
              "parameters": [
                {
                  "name": "offset",
                  "in": "query",
                  "description": "offset for persons",
                  "type": "integer"
                },
                {
                  "name": "limit",
                  "in": "query",
                  "description": "limit of persons per page",
                  "type": "integer"
                }
              ],
              "responses": {
                "200": {
                  "description": "successfully collected persons",
                  "schema": {
                     "type": "object",
                     "properties": {
                       "persons": {
                           "type": "array",
                           "items": {
                             "$ref": "#/definitions/User"
                           }

                        }
                      }
                  }
                }
              }
            }

      },
      "/person/{username}/": {
            "get": {
              "operationId": "get_user",
              "summary": "get user by username",
              "parameters": [
                {
                "name":"username",
                "in":"path",
                "description": "username",
                "type": "string",
                "required": true
                }
              ],
              "responses": {
                "200": {
                  "description": "successfully retrieved user object",
                  "schema": {
                    "$ref": "#/definitions/User"
                  }
                }
              }

            },
        "put": {
          "operationId": "put_person_details",
          "security": [
                    {
                        "oauth": [
                            "superuser"
                        ]
                    }
                ],
          "parameters": [
            {
              "name": "person_details",
              "in": "body",
              "description": "replace person details",
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                     "type": "string"
                  },
                  "age": {
                    "type": "integer",
                    "format": "int64"
                  }
                },
                "required": [
                  "firstName",
                  "lastName",
                  "age"
                ]
              }
            }
          ],
          "responses": {
            "202": {
              "description": "replaced user details successfully"
            }
          }
        },
        "delete": {
          "summary": "deleting user specified in path",
          "security": [
                    {
                        "oauth": [
                            "superuser"
                        ]
                    }
                ],
          "operationId": "",
          "parameters": [
            {

              "name":"username",
              "in":"path",
              "description": "username",
              "type": "string",
              "required": true
            }

          ],
          "responses": {
            "202": {
              "description": "object successfully deleted"
            }

          }
        }

      }


    }
}